rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Bookings collection - only allow writes from authenticated admin users
    // Cloud Functions using Admin SDK bypass these rules
    match /bookings/{bookingId} {
      // Allow read only for authenticated admins (you can customize this)
      allow read: if request.auth != null;
      // Writes are handled by Cloud Functions, so we restrict direct client writes
      allow write: if false;
    }
  }
}

